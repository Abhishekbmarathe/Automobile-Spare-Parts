<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Interface</title>
    <style>
        /* Basic styling */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: rgb(0, 0, 0);
            color: rgb(255, 255, 255);
            font-family: Georgia, 'Times New Roman', Times, serif;
        }

        header {
            background-color: #1707f9;
            color: #f2f2f5;
           
            padding: 10px 0;
            text-align: center;
        }

        nav {
            background-color: #505050;
            padding: 10px 0;
            text-align: center;
        }

        nav ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

        nav ul li {
            display: inline;
            margin-right: 20px;
        }

        a {
            color: rgb(247, 244, 244);
            font-family: Georgia, 'Times New Roman', Times, serif;

        }

        .container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
        }

        h2 {
            margin-top: 0;
        }

        form {
            margin-bottom: 20px;
        }

        form input,
        form select {
            margin-bottom: 10px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #444444;
            color: white;
        }

        button {
            padding: 10px 20px;
            background-color: hwb(0 3% 0%);
            color: white;
            border:#000000;
            cursor: pointer;
            border-radius: 5px;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        }

        button:hover {
            background-color: #2809f1;
        }
    </style>
</head>

<body>

    <header>
        <h1>Admin Interface</h1>
    </header>

    <nav>
        <ul>

            <form action="/codetails" method="get">
                <button type="submit">orders</button>
            </form>
            <li><a href="#">Profile</a></li>
            <li><a href="#">Logout</a></li>
        </ul>
    </nav>
    <div class="container">
        <h2>Add New Product</h2>

        <form id="addProductForm" action="/add" method="post" enctype="multipart/form-data" class="cat_form">
            <label for="productName">Product Name:</label><br>
            <input type="text" id="productName" name="productName" required><br>
            <label for="description">Description:</label><br>
            <textarea id="description" name="description" rows="4" required></textarea><br>
            <label for="price">Price:</label><br>


            <input type="number" id="price" name="price" step="0.01" min="0" required><br><br>

            <label for="">Enter Item image</label> <br>
            <input type="file" name="itemimg" accept="image/*"> <br><br>
            <label for="category">Category:</label><br>
            <select id="category" name="category" required>
                <option value="spareparts">spare parts</option>

            </select><br>
            <label for="stock">Stock Availability:</label><br>
            <input type="checkbox" id="stock" name="stock"><br>
            <button type="submit">Add Product</button>
        </form>

        <h2>Product Listing</h2>
        <table id="productTable">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Stock Availability</th>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% if (!data || data.length === 0) { %>
                    <h1>No items...</h1>

                    <% } else { %>

                        <% data.forEach(function(product) { %>
                            <tr>
                                <td>
                                    <%= product.productName %>
                                </td>
                                <td>
                                    <%= product.description %>
                                </td>
                                <td>$<%= product.price.toFixed(2) %>
                                </td>
                                <td>
                                    <%= product.category %>
                                </td>
                                <td>
                                    <%= product.stock ? "Yes" : "No" %>
                                </td>
                                <td>
                                    <%= product.itemimg %>
                                </td>
                                <td>

                                    <form id="deleteForm" action="/delete" method="POST">
                                        <input type="hidden" name="productId" value="<%= product._id %>" />
                                        <button class="btn" type="submit">Delete</button>
                                    </form>

                                </td>
                            </tr>
                            <% }); %>
            </tbody>
            <% } %>

        </table>
    </div>

    <script>
        let btn = document.querySelector(".btn");
        btn.addEventListener("click", () => {

            // Optionally, you can perform checks or confirmations here
            if (confirm("Are you sure you want to delete this product?")) {
                const form = document.getElementById('deleteForm');
                form.submit();  // This submits the form
                // location.reload();
            }

        });
    </script>


</body>

</html>