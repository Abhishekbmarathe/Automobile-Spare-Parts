        font-size: 18px;
    }

    .item-description {
        font-size: 14px;
        color: #666;
        margin: 10px 0;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        background-color: #007BFF;
        color: white;
        cursor: pointer;
        margin-top: 10px;
        width: 80%;
