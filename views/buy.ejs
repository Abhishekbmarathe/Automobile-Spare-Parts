<style>
    .item-card {
        box-shadow: 0 10px 13px rgb(0 0 0 / 33%);
        width: 255px;
        border-radius: 8px;
        text-align: center;
        background: white;
        overflow: hidden;
        padding: 0 0 10px 0;
        margin: 1em auto;
    }

    .item-image {
        width: 100%;
        height: 165px;
        display: block;
        object-fit: cover;
    }

    .item-name {
