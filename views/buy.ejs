        /* Center buttons */
        margin-right: 10%;
        /* Center buttons */
    }

    .btn.buy-now {
        background-color: #28a745;
    }

    .btn:hover {
        opacity: 0.8;
    }

    .container {
        width: 95%;
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        margin: auto;

    }
</style>

<body>
    <!-- header -->
    <%- include('nav'); -%>
